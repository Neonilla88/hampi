{{ header }}
<div id="information-contact">
	<div class="container">
		<ul class="breadcrumb">
			{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
			{% endfor %}
		</ul>
	</div>
	<div class="contactPage page">
		<div class="container">
			<h1 class="page__title">{{ heading_title }}</h1>
			<div class="contactPage__wrap">
				<div class="contactPage__long contactPage__grad">
					<h3 class="contactPage__title">{{ text_contact }}</h3>
					{% if formText and not success %}
						<p class="contactPage__text">{{ formText }}</p>
					{% endif %}
					{% if success %}
						<p class="contactPage__text">{{ text_success }}</p>
					{% else %}
						<form class="contactPage__form" action="{{ action }}" method="post" enctype="multipart/form-data">
							<div class="contactPage__form-line">
								<div class="contactPage__form-group">
									<div class="contactPage__form-label">{{ entry_name }}</div>
									<div class="contactPage__form-wrap{% if error_name %} error{% endif %}">
										<input type="text" class="contactPage__form-input" name="name" id="contactName" value="{{ name }}" placeholder="{{ text_placeholder_name }}">
									</div>
									{% if error_name %}<p class="contactPage__form-error">{{ error_name }}</p>{% endif %}
								</div>
								<div class="contactPage__form-group">
									<div class="contactPage__form-label">{{ entry_phone }}</div>
									<div class="contactPage__form-wrap{% if error_phone %} error{% endif %}">
										<input type="text" class="contactPage__form-input mask" name="phone" id="contactPhone" value="{{ phone }}" placeholder="+7 (999) 999-99-99">
									</div>
									{% if error_phone %}<p class="contactPage__form-error">{{ error_phone }}</p>{% endif %}
								</div>
							</div>
							<button class="contactPage__form-btn">{{ button_submit }}</button>
						</form>
					{% endif %}
				</div>
				<div class="contactPage__col">
					<div class="contactPage__content">
						{{ buyer_content }}
					</div>
					{% if buyer_email %}
						<p class="contactPage__email"><a href="mailto:{{ buyer_email }}">{{ buyer_email }}</a></p>
					{% endif %}
				</div>
				<div class="contactPage__col">
					<div class="contactPage__content">
						{{ seller_content }}
					</div>
					{% if seller_email %}
						<p class="contactPage__email"><a href="mailto:{{ seller_email }}">{{ seller_email }}</a></p>
					{% endif %}
				</div>
				<div class="contactPage__long rekv">
					<h3 class="contactPage__title">{{ title_rekv }}</h3>
					<div class="contactPage__rekv">
						{{ rekv }}
					</div>
				</div>
			</div>
		</div>
	</div>
