<script type="text/javascript"><!--
var counter = {{ minimum }};
var min = {{ minimum }};
$(document).on('click', '.productPage__blockPrice_counter-btn', function () {    
	var btn = $(this),
		oldValue = btn.closest('.number-spinner').find('input').val().trim(),
		newVal = min;
			
	if (btn.attr('data-dir') == 'up') {
		newVal = parseInt(oldValue) + counter;
	} else {
		if (oldValue > min) {
			newVal = parseInt(oldValue) - counter;
		} else {
			newVal = min;
		}
	}
	btn.closest('.number-spinner').find('input').val(newVal);
    updateprice(newVal);
});
function updateprice(q){
    id = {{ productID }};
    $.ajax({
		url: 'index.php?route=product/product/price',
		type: 'post',
		dataType: 'json',
		data: 'product_id=' + id + '&quantity=' + q,
		success: function(json) {
			if(!json['special']) {
                $('.productPage__blockPrice-main').html(json['price']);
            } else {
                $('.productPage__blockPrice-main').html('<span style="text-decoration: line-through;">' + json['price'] + '</span> ' + json['special']);
            }
            $('.productPage__blockPrice-tax').html(json['tax']);
		}
	});
}
