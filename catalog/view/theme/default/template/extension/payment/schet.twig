<div class="buttons confirm-buttons">
	<a id="button-confirm" class="simplecheckout__btn-order">{{ button_confirm }}</a>
</div>
<script type="text/javascript"><!--
$('#button-print-invoice').on('click', function() {
	$('#button-confirm').trigger('click');
});
$('#button-confirm').on('click', function() {
	$.ajax({ 
		type: 'get',
		url: 'index.php?route=extension/payment/schet/confirm',
		cache: false,
		beforeSend: function() {
//			window.open('{{ print }}');
			$('#button-confirm').button('loading');
		},
		complete: function() {
			$('#button-confirm').button('reset');
		},		
		success: function() {
			location = '{{ continue }}';
		}
	});
});
